@model Berber
@{
    Layout = "_Layout2";
}
<h2>Berber Ekle</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Admin" asp-action="BerberEkle" method="post">
        <div class="mb-3">
            <label asp-for="AdSoyad" class="form-label">Berber Ad-Soyad</label>
            <input asp-for="AdSoyad" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefon</label>
            <input asp-for="Telefon" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="HizmetID" class="form-label">Hizmetler</label>
            <select asp-for="HizmetID" asp-items="ViewBag.Hizmetler" class="form-select">
                <option value="">Seçiniz</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="CalismaBaslangic" class="form-label">Mesai Başlangıç</label>
            <input asp-for="CalismaBaslangic" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="CalismaBitis" class="form-label">Mesai Btitş</label>
            <input asp-for="CalismaBitis" class="form-control">
        </div>
        
        <button type="submit" class="btn btn-secondary">Kaydet</button>
    </form>