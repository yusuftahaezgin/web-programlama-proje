@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-5">
    <h1 class="text-center fw-bold mb-5">Hizmetlerimiz</h1>
    <div class="row">
        <!-- Saç Kesimi -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="/images/sac_kesimi.jpg" class="card-img-top" alt="Saç Kesimi">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Saç Kesimi</h5>
                    <p class="card-text">Kafa yapınıza göre en uygun saç kesimini yapıyoruz.</p>
                    <p class="fw-bold text-primary">500 TL</p>
                    <a asp-controller="Randevu" asp-action="Create" class="btn btn-outline-dark">Randevu Al</a>
                </div>
            </div>
        </div>
        <!-- Sakal Kesimi -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="/images/sakal_tirasi.jpg" class="card-img-top" alt="Sakal Kesimi">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Sakal Kesimi</h5>
                    <p class="card-text">Saç şeklinize uygun sakal tıraşı.</p>
                    <p class="fw-bold text-primary">250 TL</p>
                    <a asp-controller="Randevu" asp-action="Create" class="btn btn-outline-dark">Randevu Al</a>
                </div>
            </div>
        </div>
        <!-- Saç & Sakal Kesimi -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="/images/sac_sakal_kesimi.jpg" class="card-img-top" alt="Saç & Sakal Kesimi">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Saç & Sakal Kesimi</h5>
                    <p class="card-text">Kafa ve yüz şeklinize göre saç ve sakal tıraşı.</p>
                    <p class="fw-bold text-primary">700 TL</p>
                    <a asp-controller="Randevu" asp-action="Create" class="btn btn-outline-dark">Randevu Al</a>
                </div>
            </div>
        </div>
    </div>
</div>
