@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-section text-center text-white d-flex align-items-center" style="height: 100vh;  background: linear-gradient(135deg, rgba(0, 0, 0, 0.6), rgba(34, 34, 34, 0.8)), url('/images/berber.jpg') no-repeat center center/cover;">
    <div class="container">
        <h1 class="display-2 fw-bold animate-fade">Berber Otomasyonu</h1>
        <p class="lead mt-3 animate-slide">Kişisel bakımda profesyonelliği deneyimleyin.</p>
        <a asp-controller="Randevu" asp-action="Create" class="btn btn-secondary btn-lg mt-4 animate-zoom">Hemen Randevu Al</a>
    </div>
</div>

<div class="services-section py-5" style="background-color: #eff2f6">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Hizmetlerimiz</h2>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card service-card border-0 shadow">
                    <img src="/images/sac_kesimi.jpg" class="card-img-top" alt="Saç Kesimi">
                    <div class="card-body text-center">
                        <h5 class="card-title">Saç Kesimi</h5>
                        <p class="card-text">Tarzınıza uygun profesyonel saç kesimi.</p>
                        <a asp-controller="Randevu" asp-action="Create" class="btn btn-outline-secondary">Randevu Al</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card service-card border-0 shadow">
                    <img src="/images/sakal_tirasi.jpg" class="card-img-top" alt="Sakal Tıraşı">
                    <div class="card-body text-center">
                        <h5 class="card-title">Sakal Tıraşı</h5>
                        <p class="card-text">Bakımlı bir görünüm için özenli sakal tıraşı.</p>
                        <a asp-controller="Randevu" asp-action="Create" class="btn btn-outline-secondary">Randevu Al</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card service-card border-0 shadow">
                    <img src="/images/maske.jpg" class="card-img-top" alt="Maske">
                    <div class="card-body text-center">
                        <h5 class="card-title">Maske</h5>
                        <p class="card-text">Cildinizi yenileyin ve canlandırın.</p>
                        <a asp-controller="Randevu" asp-action="Create" class="btn btn-outline-secondary">Randevu Al</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="about-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="fw-bold">Hakkımızda</h2>
                <p class="mt-3">
                    Berber Otomasyonu, modern teknolojilerle müşteri deneyimini iyileştirmeyi hedefler. 
                    Randevu alma sistemi ve profesyonel ekibimizle yanınızdayız.
                </p>
                <a asp-controller="Home" asp-action="Hizmetler" class="btn btn-secondary mt-3">Hizmetlerimizi Keşfedin</a>
            </div>
            <div class="col-lg-6 text-center">
                <img src="/images/about-us.jpg" alt="Hakkımızda" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

<div class="contact-section py-5 text-white" style="background: linear-gradient(135deg, #343a40, #212529);">
    <div class="container">
        <h2 class="text-center fw-bold">Bize Ulaşın</h2>
        <div class="row mt-4">
            <div class="col-md-4 text-center">
                <i class="bi bi-telephone-fill display-4 text-primary"></i>
                <p class="mt-2">(555) 555-5555</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-envelope-fill display-4 text-primary"></i>
                <p class="mt-2">info@berberotomasyonu.com</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-geo-alt-fill display-4 text-primary"></i>
                <p class="mt-2">Berber Sokak No:1, İstanbul</p>
            </div>
        </div>
    </div>
</div>
