@model RandevuDetay
@{
    Layout = "_Layout2";
}

<div class="container mt-5">
    <h1 class="text-center fw-bold mb-5">Randevu Detayları</h1>

    <!-- Eğer randevu bulunamazsa, mesaj göster -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning">
            @TempData["Message"]
        </div>
    }

    <div class="row">
        <!-- Hizmet Adı -->
        <div class="col-md-6 mb-3">
            <label class="form-label">Hizmet</label>
            <input type="text" class="form-control" value="@Model.HizmetAdi" readonly />
        </div>

        <!-- Berber Adı -->
        <div class="col-md-6 mb-3">
            <label class="form-label">Berber</label>
            <input type="text" class="form-control" value="@Model.BerberAdi" readonly />
        </div>

        <!-- Randevu Tarihi -->
        <div class="col-md-6 mb-3">
            <label class="form-label">Randevu Tarihi</label>
            <input type="text" class="form-control" value="@Model.RandevuTarihi.ToString("yyyy-MM-dd")" readonly />
        </div>

        <!-- Randevu Saati -->
        <div class="col-md-6 mb-3">
            <label class="form-label">Randevu Saati</label>
            <input type="text" class="form-control" value="@Model.RandevuSaati" readonly />
        </div>

        <!-- Durum -->
        <div class="col-md-6 mb-3">
            <label class="form-label">Durum</label>
            <input type="text" class="form-control" value="@(Model.Durum ? "Onaylı" : "Onay Bekliyor")" readonly />
        </div>
    </div>
</div>
