<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/site.css">
    <title>Berber Otomasyonu</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                Berber Otomasyonu
            </a>
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                Hizmetler
            </a>
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                Randevu Al
            </a>
            <ul class="navbar-nav ms-auto">
                @if(User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="#" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="HesapIslemleri" asp-action="Logout" class="nav-link">Çıkış Yap</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="HesapIslemleri" asp-action="Login"  class="nav-link">Giriş Yap</a>
                    </li>
                }
               
            </ul>

        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()
    </div>
</body>
</html>